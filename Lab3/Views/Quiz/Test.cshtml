@model Backend3.Models.QuizViewModel
@{
    ViewBag.Title = "Test";
}

<h2>Quiz</h2>

<form class="form-horizontal" asp-action="Test">
    <div asp-validation-summary="All"></div>
    <input type="hidden" asp-for="Expr.A" />
    <input type="hidden" asp-for="Expr.B" />
    <input type="hidden" asp-for="Expr.Op" />

    @for (int i = 0; i < Model.Terms.Count; i++)
    {
        <input type="hidden" asp-for="@Model.Terms[i].A" />
        <input type="hidden" asp-for="@Model.Terms[i].B" />
        <input type="hidden" asp-for="@Model.Terms[i].Op" />
        <input type="hidden" asp-for="@Model.Terms[i].Result" />
    }

    <div class="form-group">
        <label class="col-md-2 control-label">
            <span>@Model.Expr.A</span>
            <span>@Model.Expr.Op</span>
            <span>@Model.Expr.B</span>
            <span>=</span>
        </label>
        <div class="col-md-10">
            <input type="text" name="Expr.Result" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10 col-md-offset-2">
            <button type="submit" class="btn btn-default" name="Action" value="Next">Next</button>
            <button type="submit" class="btn btn-primary" name="Action" value="Finish">Finish</button>
        </div>
    </div>
</form>