@model Backend6.Models.ViewModels.ForumMessageAttachmentCreateModel

<h2>Create</h2>

<h4>Attachment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-route-messageId="@ViewBag.MessageId" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FormFile" class="control-label"></label>
                <input type="file" asp-for="FormFile" class="form-control" required />
                <span asp-validation-for="FormFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="ForumTopics" asp-action="Index" asp-route-id="@ViewBag.TopicId">Back to topic</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
